{
  "manifest_version": 2,
  "name": "Comic Image Translator",
  "version": "1.0.0",
  "description": "Translate comic images using manga-image-translator backend",
  "icons": {
    "48": "icons/icon64.png",
    "96": "icons/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "notifications",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Comic Translator",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "97730l10n@mozmail.com"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "icons/*"
  ]
}