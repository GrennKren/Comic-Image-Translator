{
  "manifest_version": 3,
  "name": "Comic Image Translator",
  "version": "1.0.0",
  "description": "Translate comic images using manga-image-translator backend",
  "icons": {
    "48": "icons/Comic48.png",
    "64": "icons/Comic64.png",
    "96": "icons/Comic96.png",
    "128": "icons/Comic128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"],
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icons/Comic64.png",
    "default_title": "Comic Translator",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "97730l10n@mozmail.com"
    }
  },
  "options_ui": {
    "page": "configuration.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "*.html", "*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}